<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/socket.io/socket.io.js"> </script>
</head>
<body>
    <h3> Nombre de livres </h3>
    <h2 id="availableBooks"> </h2>
    <input type="button" value="chercher" onclick="search()" />

    <script>
        const socket = io.connect("ws://localhost:3000");

        socket.on("search", (data)=>{
            const availableBooksTag = document.getElementById("availableBooks");
            availableBooksTag.innerHTML = data;
        });

        function search() {
            socket.emit("clickedBtn");
        }
    </script>
</body>
</html>